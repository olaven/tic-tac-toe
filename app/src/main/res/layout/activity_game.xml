<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".gui.activities.GameActivity">


    <GridView
            android:id="@+id/activity_game_grid_view"
            android:layout_width="wrap_content"
            android:layout_height="520dp"
            android:orientation="horizontal"
            android:columnWidth="100dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="240dp"
            android:gravity="center" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_game_playertext1"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/activity_game_playertext2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.496"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>
    <TextView
            android:id="@+id/activity_game_playertext2"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:id="@+id/activity_game_playertext1"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>